<UserControl x:Class="Hashtil_Jobs_For_Drivers.UserControlScreens.DeliveryLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hashtil_Jobs_For_Drivers.UserControlScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Border x:Name="BorderJob" MouseDown="Border_MouseDown"  Width="250" Height="250" CornerRadius="30"
                ToolTip="היי">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE6662A"/>
                    <GradientStop Color="#FFDCB322" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
           
        </Border>
    </Grid>
</UserControl>
